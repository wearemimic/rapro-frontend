{
  "name": "RetirementAdvisorPro Admin",
  "short_name": "RAP Admin",
  "description": "Administrative interface for RetirementAdvisorPro platform",
  "start_url": "/admin/dashboard",
  "display": "standalone",
  "background_color": "#1e293b",
  "theme_color": "#3b82f6",
  "orientation": "portrait-primary",
  "scope": "/admin/",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["business", "productivity", "finance"],
  "screenshots": [
    {
      "src": "/assets/screenshots/desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Desktop view of admin dashboard"
    },
    {
      "src": "/assets/screenshots/mobile.png", 
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile view of admin dashboard"
    }
  ],
  "icons": [
    {
      "src": "/assets/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/assets/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/assets/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/assets/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/assets/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/assets/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/assets/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/assets/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View admin dashboard",
      "url": "/admin/dashboard",
      "icons": [{ "src": "/assets/icons/dashboard-shortcut.png", "sizes": "96x96" }]
    },
    {
      "name": "Users",
      "short_name": "Users", 
      "description": "Manage users",
      "url": "/admin/users",
      "icons": [{ "src": "/assets/icons/users-shortcut.png", "sizes": "96x96" }]
    },
    {
      "name": "Analytics",
      "short_name": "Analytics",
      "description": "View analytics",
      "url": "/admin/analytics", 
      "icons": [{ "src": "/assets/icons/analytics-shortcut.png", "sizes": "96x96" }]
    },
    {
      "name": "Support",
      "short_name": "Support",
      "description": "Manage support tickets",
      "url": "/admin/support",
      "icons": [{ "src": "/assets/icons/support-shortcut.png", "sizes": "96x96" }]
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+rap",
      "url": "/admin/handle?protocol=%s"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "share_target": {
    "action": "/admin/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", ".pdf", ".csv", ".xlsx"]
        }
      ]
    }
  }
}